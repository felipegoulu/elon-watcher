# Required: Apify API token (get it from https://console.apify.com/account/integrations)
APIFY_TOKEN=apify_api_xxxxx

# Required: Webhook URL to receive new tweets
WEBHOOK_URL=https://your-webhook-url.com/endpoint

# Optional: Twitter/X handle to monitor (default: elonmusk)
TWITTER_HANDLE=elonmusk

# Optional: Poll interval in minutes (default: 5)
POLL_INTERVAL_MINUTES=5

# Optional: Webhook secret for HMAC signature verification
WEBHOOK_SECRET=your-secret-here

# Optional: Path to state file (default: ./state.json)
STATE_FILE=./state.json
